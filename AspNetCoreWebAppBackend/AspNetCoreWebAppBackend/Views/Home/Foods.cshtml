@model IEnumerable<AspNetCoreWebAppBackend.Database.Foods>

@{
    ViewData["Title"] = "Foods";
}

<h1>Foods</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodCarbonhydrate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodProtein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodFat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCarbonhydrate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodProtein)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodFat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FoodId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FoodId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FoodId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
